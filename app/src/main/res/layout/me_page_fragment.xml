<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.ObjectPage.MePage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_250sdp">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_130sdp"
                        android:contentDescription="TODO"
                        android:scaleType="fitXY"
                        android:src="@drawable/cover_image" />
                </LinearLayout>


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/avatar_me"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:src="@drawable/tung_me"
                    app:civ_border_color="#FFFFFF"
                    app:civ_border_width="@dimen/_3sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_99sdp"
                    android:text="Đặng Thanh Tùng(Tùng TT)"
                    android:textColor="#000000"
                    android:textSize="@dimen/_24sdp" />
            </FrameLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <ImageView
                    android:id="@+id/me_ic1"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:background="@drawable/bo_tron_icon"
                    android:src="@drawable/ic_add" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/me_ic1"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:text="them vao tin"
                    android:textSize="@dimen/_12sdp" />

                <ImageView
                    android:id="@+id/me_ic2"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginLeft="@dimen/_90sdp"
                    android:background="@drawable/bo_tron_icon"
                    android:src="@drawable/ic_add" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/me_ic2"
                    android:layout_marginLeft="@dimen/_80sdp"
                    android:text="che do xem"
                    android:textSize="@dimen/_12sdp" />

                <ImageView
                    android:id="@+id/me_ic3"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginLeft="@dimen/_170sdp"
                    android:background="@drawable/bo_tron_icon"
                    android:src="@drawable/ic_add" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/me_ic3"
                    android:layout_marginLeft="@dimen/_150sdp"
                    android:gravity="center"
                    android:text="chinh sua\ntrang ca nhan"
                    android:textSize="@dimen/_12sdp" />

                <ImageView
                    android:id="@+id/me_ic4"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:background="@drawable/bo_tron_icon"
                    android:src="@drawable/khac" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/me_ic3"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_28sdp"
                    android:gravity="center"
                    android:text="khac"
                    android:textSize="@dimen/_12sdp" />
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>